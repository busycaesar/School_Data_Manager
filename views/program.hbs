<div class="row">
  <div class="col-md-12">
    <h2>{{program.programName}} - Program Code: {{program.programCode}}</h2>
    <hr />
    <form method="post" action="/program/update">
      <fieldset>
        <div class="row">
          <div>
            <label for="programName">Program Code</label>
            <input
              type="hidden"
              name="programCode"
              value="{{data.programCode}}"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="programName">Program Name</label>
              <input
                class="form-control"
                id="programName"
                name="Program Name"
                type="text"
                value="{{data.programName}}"
              />
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Update Program"
      /><br /><br /><br />
    </form>
  </div>
</div>