<div class="row">
  <div class="col-md-12">
    <h2>
      Students
      <a href="/students/add" class="btn btn-success pull-right">Add New Student</a>
    </h2>
    <br />
    <div class="table-responsive">
      <table class="table">
        <tr>
          <td>Student ID</td>
          <td>Full Name</td>
          <td>Email</td>
          <td>Address</td>
          <td>Expected Credential</td>
          <td>Status</td>
          <td>Program</td>
          <td>Registration Date</td>
        </tr>
        {{#each students}}
          <tr>
            <td>
              <a href="/student/{{studentID}}">
                {{studentID}}
              </a>
            </td>
            <td>{{firstName}} {{lastName}}</td>
            <td>
              <a href="mailto:{{email}}">{{email}}</a>
            </td>
            <td>{{addressStreet}}
              {{addressCity}}
              {{addressState}}
              {{addressZip}}</td>
            <td>
              <a href="/students?credential={{expectedCredential}}">
                {{expectedCredential}}
              </a>
            </td>
            <td>
              <a href="/students?status={{status}}">
                {{status}}
              </a>
            </td>
            <td>
              <a href="/students?program={{program}}">
                {{program}}
              </a>
            </td>
            <td>{{registrationDate}}</td>
            <td><a href="/student/delete/{{studentID}}"><div
                  class="btn btn-danger"
                >Remove</div></a></td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
  {{#unless students}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>